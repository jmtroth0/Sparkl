<div class="background">
  <div class="image-container">
    <img class="focused-photo" src="<%= photo.get('image_url') %>">
  </div>
  <div class="photo-buttons group">
    <a class="back-to-album group" href="<%= sourceUrl %>">
      <% if (sourceUrl.indexOf("photostream") !== -1) { %>
        Back to photostream
      <% } else if (independent) { %>
        To user
      <% } else { %>
        Back to Album
      <% } %>
    </a>

  <% if (photo.get("uploader") && photo.get("uploader").id === Sparklr.currentUser.id) { %>
    <button class="delete-photo-form group">Delete Photo</button>
  <% } %>
  </div>
</div>
